  set cindent
  
   " 缩进为 2 个空格
   set shiftwidth=2
  
   " tab 键相当于 2 个空格
   set tabstop=2
  
  "记录历史的行数
  set history=1000
 set cursorline
  
    "高亮显示所有匹配
  set hlsearch
